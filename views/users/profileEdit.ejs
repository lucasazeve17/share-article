<%- include('../partials/head')%>

<body>
    <%- include('../partials/navbar')%>
    <div class="container">
        <div class="card mt-5 card-profile">
            <div class="card-body ">
                <div class="container-image">
                    <%if(user.avatar == undefined){%>

                    <img src="data:image/jpeg;base64,"
                        alt="">
                    <%} else{%>
                    <img src="<%= user.avatar %>" alt="">
                    <%}%>
                </div>
                <div class="painel-profile">
                    <form action="/users/profile/edit?_method=PUT" method="POST">
                    <div class="">

                        <h5><%=user.name%></h5>
                    <input class="form-control" type="text" name="title"
                        placeholder="Digite seu tÃ­tulo. EX:Desenvolvedor Web" value="<%= user.title%>">
                </div>
                <hr>
                <h3>Sobre</h3>
                <textarea class="form-control mb-2" placeholder="Max 250 char" name="about" maxlength="250" ><%= user.about%></textarea>

                <button class="btn btn-success" type="submit">Salvar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container container-articles mt-3">
        <div class="icons">
            <img src="/assets/grid.svg" alt="icone de grids">
            <img src="/assets/rows.svg" alt="icone de linhas">
        </div>
        <% user.articles.forEach(article=>{%>
        <div class="card">

            <div class="card-body">
                <p>
                    <%= article.title%>
                </p>
            </div>
        </div>
        <%})%>

    </div>
    </div>
    <script>
        const icons = document.querySelectorAll('.icons img')
        const container = document.querySelector('.container.container-articles')
        icons[0].addEventListener('click', () => {


            container.classList.remove('dis-flex')

        })
        icons[1].addEventListener('click', () => {
            container.classList.add('dis-flex')
        })
    </script>
</body>
<%- include('../partials/footer')%>